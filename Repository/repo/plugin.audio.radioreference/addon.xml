  version="1.1.1"
  provider-name="xbmchub.com">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Broadcastify</summary>
    <description lang="en">The worlds largest source of Public Safety, Aircraft, Rail and Marine Radio Live Audio Streams</description>
    <platform>all</platform>
    <forum>http://www.xbmchub.com/forums/official-xbmc-hub-repo/</forum>
    <website>http://www.xbmchub.com/</website>
  </extension>
</addon>
