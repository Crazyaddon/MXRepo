<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.pearljamlive"
       name="Pearl Jam Live"
       version="1.0.8"
       provider-name="Kinkin">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="plugin.video.youtube"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>A Pearl Jam fan addon!</summary>
        <description>Listen to Pearl Jam concert bootlegs as far back as 1990</description>
    </extension>
	
</addon>
