<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.gametrailerscom" version="1.0.3" name="GameTrailers.com" provider-name="David Gray (N3MIS15)">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.xbmcswift2" version="2.4.0" />
        <import addon="script.module.parsedom" version="1.5.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">GameTrailers.com</summary>
        <description lang="en">
            Ever since its inception in 2002, GameTrailers.com has helped usher in a new generation of video game media by providing the global gaming masses with a vast library of high-resolution video game trailers, gameplay edits, original features, and exclusive content that users have been downloading and streaming across multiple platforms millions of times per month for over a decade.
        </description>
        <platform>all</platform>
        <language>en</language>
        <website></website>
        <source>https://github.com/N3MIS15/plugin.video.gametrailerscom</source>
        <forum>http://forum.xbmc.org/showthread.php?tid=162908</forum>
        <email>N3MIS15@gmail.com</email>
    </extension>
