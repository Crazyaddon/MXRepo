<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.ustvvodlibraryautoupdate"
    name="USTV VoD Library Auto Update" version="1.0.1" provider-name="slices">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
   <extension point="xbmc.service" library="default.py" start="login">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Update your KODI USTV VoD Video Libraries on a timer.</summary>
    <description lang="en">Requires the USTV VoD plugin. </description>
    <platform>all</platform>
  </extension>
</addon>
