    <forum>http://forum.xbmc.org/showthread.php?tid=155904</forum>
    <website>https://github.com/nightflyer73/plugin.video.ansa</website>
    <email></email>
    <source>https://github.com/nightflyer73/plugin.video.ansa</source>
  </extension>
</addon>
