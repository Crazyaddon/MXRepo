<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.concertarchive"
       name="Concert Archive"
       version="1.0.2"
       provider-name="Kinkin, art by Marquerite">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.t0mm0.common" version="1.1.0"/>
        <import addon="plugin.video.youtube"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>video audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Great archive of concert videos and audio bootlegs</summary>
        <description>Find classic concert videos from concertsvideos.com and bandsvideos.com. 
Plus stream or download from over 70,000 live audio bootlegs from www.archive.org</description>
    </extension>
	
</addon>
